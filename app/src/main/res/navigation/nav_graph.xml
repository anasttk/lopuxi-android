<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/authRegFragment">

    <fragment
        android:id="@+id/authRegFragment"
        android:name="com.example.lopuxi30.ui.screens.auth_reg.AuthRegFragment"
        android:label="fragment_auth_reg"
        tools:layout="@layout/fragment_auth_reg" >
        <action
            android:id="@+id/action_authRegFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/authRegFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.lopuxi30.ui.screens.create_post.CreatePostFragment"
        android:label="fragment_create_post"
        tools:layout="@layout/fragment_create_post" />
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.lopuxi30.ui.screens.feed.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" />
</navigation>